{
    "name": "UnyLeya API",
    "description": "Uma simples API para o processo seletivo programador pleno da Faculdade UnyLeya",
    "keywords": ["api", "rest"],
    "homepage": "https://github.com/AlexAlexandre/unyleyaAPI",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Alexandre",
            "email": "alexalexandrejr@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17"
    },
    "autoload": {
        "classmap": [
            "src/controllers",
            "src/database",
            "src/models",
            "src/QueryObject"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "classmap": [
            "src/controllers",
            "src/database",
            "src/models",
            "src/QueryObject"
        ]
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }

}
